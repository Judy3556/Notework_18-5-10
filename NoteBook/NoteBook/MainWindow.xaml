<Window x:Class="NoteBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- 定义格子-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- 内容-->
        <Rectangle Grid.Column="1" Fill="Gray"></Rectangle>
        <StackPanel Grid.Column="1">
            <Button Click="Button_Click" >Open</Button>
            <Button Click="Button_Click_1">Save</Button>
            <Button Click="Button_Click_2" >9</Button>
        </StackPanel>
        
        <!--左边打字区-->
        <TextBox x:Name="Textarea" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
        
    </Grid>
</Window>
